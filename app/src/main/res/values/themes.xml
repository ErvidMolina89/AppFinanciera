<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppFinanciera" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AppFinanciera" parent="Base.Theme.AppFinanciera" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorAccent</item> <!-- Color del texto editable -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">bold</item> <!-- Color del texto de hint -->
    </style>

    <!-- Define a custom style for the TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/colorAccent</item> <!-- Color del icono -->
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textColor">@color/black</item> <!-- Color del hint -->
    </style>

</resources>